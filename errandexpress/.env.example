# ==========================================
# ErrandExpress Environment Configuration
# ==========================================
# Copy this file to .env and fill in your actual values

# ==========================================
# CRITICAL SECURITY SETTINGS (REQUIRED)
# ==========================================

# Django Secret Key - REQUIRED
# Generate a new one using: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
DJANGO_SECRET_KEY=your-secret-key-here-change-this

# Debug Mode - Set to True ONLY in development
# IMPORTANT: Must be False in production for security
DEBUG=True

# Allowed Hosts - Comma-separated list of domains
# In development: localhost,127.0.0.1
# In production: yourdomain.com,www.yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# ==========================================
# DATABASE CONFIGURATION
# ==========================================

# Primary Database URL (PostgreSQL/Supabase)
# Format: postgresql://user:password@host:port/database
# Leave empty to use SQLite (development only)
DATABASE_URL=

# ==========================================
# PAYMENT INTEGRATION (PayMongo)
# ==========================================

# PayMongo API Keys
# Get these from: https://dashboard.paymongo.com/developers
PAYMONGO_SECRET_KEY=your-paymongo-secret-key
PAYMONGO_PUBLIC_KEY=your-paymongo-public-key
PAYMONGO_WEBHOOK_SECRET=your-paymongo-webhook-secret

# ==========================================
# OPTIONAL: SUPABASE INTEGRATION
# ==========================================

# Supabase Configuration (Optional)
# Leave empty to disable Supabase features
SUPABASE_URL=
SUPABASE_KEY=

# ==========================================
# OPTIONAL: GOOGLE SHEETS INTEGRATION
# ==========================================

# Google Sheets API (Optional)
# For typing test integration
GOOGLE_SHEETS_CREDENTIALS=
TYPING_TEST_SHEET_ID=

# ==========================================
# OPTIONAL: CELERY CONFIGURATION
# ==========================================

# Redis URL for Celery (Optional)
# Default: redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ==========================================
# SYSTEM CONFIGURATION
# ==========================================

# System Fee (in PHP)
# Default: 2.00
SYSTEM_FEE=2.00
